# Auto detect text files and perform LF normalization
* text=auto

# PHP
*.php text eol=lf
*.blade.php text eol=lf

# JavaScript
*.js text eol=lf
*.json text eol=lf

# Markdown
*.md text eol=lf

# Config
*.yaml text eol=lf
*.yml text eol=lf
*.ini text eol=lf

# Shell scripts
*.sh text eol=lf

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
tests/ export-ignore
.github/ export-ignore
